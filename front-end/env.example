# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URL for the network you want to deploy to
RPC_URL=https://sepolia.infura.io/v3/your_infura_key

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Expected chain ID for your network
NEXT_PUBLIC_EXPECTED_CHAIN_ID=11155111

# VRF Subscription ID (get this from Chainlink VRF)
VRF_SUBSCRIPTION_ID=1

# IPFS Configuration (Infura IPFS)
NEXT_PUBLIC_INFURA_IPFS_ENDPOINT=https://ipfs.infura.io:5001
NEXT_PUBLIC_INFURA_IPFS_API_KEY=your_infura_ipfs_project_id
NEXT_PUBLIC_INFURA_IPFS_API_KEY_SECRET=your_infura_ipfs_project_secret

# Alternative: Pinata IPFS (if you prefer Pinata)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key
NEXT_PUBLIC_PINATA_SECRET_API_KEY=your_pinata_secret_key
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt

# IPFS Gateway for displaying images
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
